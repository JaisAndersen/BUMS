@page
@model BUMS.ShowUserGroupModel
@{
}

<h3 style="color:black">  UserGroups</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.User.UserName) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.User.UserName) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.User.UserGroup) </dt>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Group Name</th>
                    <th>UserGroup</th>
                </tr>
                @foreach (var item in Model.User.UserGroup)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Group.GroupName)</td>
                        <td> @Html.DisplayFor(modelItem => item.User.UserGroup)</td>
                    </tr>
                }
            </table>
            <p>
                Add user to a usergroup? Please Click here:
                <a asp-page="/Group/GetGroup" asp-route-uid="@Model.User.UserID">Add to a group</a>
            </p>
        </dd>
    </dl>
</div>