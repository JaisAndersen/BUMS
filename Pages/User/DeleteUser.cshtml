@page
@model BUMS.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<div>
    <hr />
    <form method="post">
        <dl class="row">

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.user.UserNavigationID)</dt>
            <dd class="col-sm-10">@Model.user.UserNavigationID</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.user.UserName)</dt>
            <dd class="col-sm-10">@Model.user.UserName</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.user.Email)</dt>
            <dd class="col-sm-10">@Model.user.Email</dd>
        </dl>
        <input type="hidden" asp-for="user.UserNavigationID" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
</div>