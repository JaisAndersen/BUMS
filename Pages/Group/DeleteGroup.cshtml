@page
@model BUMS.DeleteGroupModel
@{
    ViewData["Title"] = "Delete Group";
}
<div>
    <hr/>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">  @Html.DisplayNameFor(model => model.group.GroupId)   </dt>
            <dd class="col-sm-10">  @Model.group.GroupId  </dd>
            <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.group.GroupName)  </dt>
