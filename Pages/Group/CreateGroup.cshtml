@page
@model BUMS.CreateGroupModel
@{
    ViewData["Title"] = "Create Group";
}

<h1>Create Group</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group.GroupName" class="control-label"></label>
                <input asp-for="@Model.Group.GroupName" class="form-control" />
                <span asp-validation-for="@Model.Group.GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group.Access" class="control-label"></label>
                <select class="form-select" asp-for="@Model.Group.Access" id="AccessID" asp-items="@Model.SelectListAccess">
                    <option selected="selected" value="">---Choose access type for the group---</option>
                </select>
                <span asp-validation-for="@Model.Group.Access" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn custom-btn" />
            </div>
        </form>
    </div>
</div>
